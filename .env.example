# Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ebook_reader?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN=24h

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DEST=./uploads

# H5P Configuration (if using H5P library)
H5P_LIBRARY_PATH=./h5p-libraries
H5P_CONTENT_PATH=./uploads/h5p
H5P_TEMPORARY_PATH=./temp/h5p

# Email Configuration (for notifications, if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Admin User (for seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123